{
  "name": "arikatsu-lol",
  "description": "For those good moments by Arikatsu.",
  "version": "1.0.0",

  "scripts": {
    "start": "ts-node src/index.ts",
    "package": "tsc && pkg --compress GZip .",
    "build": "ncc build src/index.ts -o bin/js -m --target es2020"
  },

  "dependencies": {
    "express": "^4.18.1",
    "dotenv": "^16.0.1",
    "express-fileupload": "^1.4.0",
    "ejs": "^3.1.8"
  },

  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/express": "^4.17.13",
    "@types/express-fileupload": "^1.2.2",

    "typescript": "^4.7.4",
    "ts-node": "^10.8.1",

    "@typescript-eslint/parser": "^5.26.0",
    "@typescript-eslint/eslint-plugin": "^5.26.0",
    "eslint": "^8.16.0",

    "pkg": "^5.7.0",
    "@vercel/ncc": "^0.34.0"
  },

  "bin": "build/index.js",
  "pkg": {
    "targets": ["latest-linux-x64"],
    "assets": ["views/**/*"],
    "outputPath": "bin"
  }
}
